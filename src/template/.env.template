# Supabase project configuration
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Set to False for JWKS verification (recommended), True for legacy HS256 verification
SUPABASE_USE_LEGACY_JWT=False

# Only required if SUPABASE_USE_LEGACY_JWT is True
# SUPA_JWT_SECRET=your-supabase-jwt-secret

# CORS origins for your frontend (comma-separated)
ORIGINS=["http://localhost:5173", "http://localhost:4173", "https://*.vercel.app"]

# Development Mode (for local testing without real Supabase credentials)
# ⚠️ IMPORTANT: Never enable dev mode in production environments.
DEV_MODE=False
DEV_TOKEN=your-dev-token-here
DEV_USER_ID=custom-dev-user  # optional
DEV_ROLE=custom-role         # optional
DEV_EMAIL=custom@email.com   # optional